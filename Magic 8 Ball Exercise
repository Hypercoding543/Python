import random

name = "Joe"
question = ""
random_number = random.randint(1,20)




if random_number == 1:
  Magic_8Balls_answer = ("Yes - definitely")
elif random_number == 2:
  Magic_8Balls_answer = ("It is decidedly so")
elif random_number == 3:
  Magic_8Balls_answer = ("Without a doubt")
elif random_number == 4:
  Magic_8Balls_answer = ("Reply hazy, try again")
elif random_number == 5:
  Magic_8Balls_answer = ("Ask again later")
elif random_number == 6:
  Magic_8Balls_answer = ("Better not tell you now")
elif random_number == 7:
  Magic_8Balls_answer = ("My sources say no")
elif random_number == 8:
  Magic_8Balls_answer = ("Outlook not so good")
elif random_number == 9:
  Magic_8Balls_answer = ("Very doubtful")
elif random_number == 10:
  Magic_8Balls_answer = ("Unlikely")
elif random_number == 11:
  Magic_8Balls_answer = ("For sure")
elif random_number == 12:
  Magic_8Balls_answer = ("All the time")

else: Magic_8Balls_answer = ("Error")

if question == "":
  print("Think about a zoo question for Joe.")

  

print(random_number)
print(name + " asks: " + question)
print("Magic 8-Balls's answer: " + Magic_8Balls_answer)
